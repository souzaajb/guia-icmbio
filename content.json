  "glossary": [
    {
      "term": "Auto de Infração (AI)",
      "definition": "Documento lavrado por agente fiscalizador que registra formalmente a infração administrativa ambiental, contendo descrição da conduta, legislação infringida e penalidades aplicáveis."
    },
    {
      "term": "PRAD",
      "definition": "Projeto de Recuperação de Área Degradada - conjunto de ações e métodos destinados à recomposição de área com passivo ambiental."
    },
    {
      "term": "TCCM",
      "definition": "Termo de Compromisso de Conversão de Multa - instrumento que formaliza a conversão da penalidade pecuniária em serviços ambientais."
    },
    {
      "term": "Prescrição Punitiva",
      "definition": "Perda do direito de punir após transcorridos 5 anos da data da infração sem que haja interrupção do prazo."
    },
    {
      "term": "Prescrição Intercorrente",
      "definition": "Prescrição que ocorre durante o processo administrativo, quando este fica paralisado por mais de 3 anos por inércia da Administração."
    },
    {
      "term": "Contraditório",
      "definition": "Princípio que garante à parte o conhecimento de todos os atos processuais e a possibilidade de se manifestar sobre eles."
    },
    {
      "term": "Ampla Defesa",
      "definition": "Direito de defender-se por todos os meios legais e moralmente legítimos disponíveis."
    },
    {
      "term": "Autotutela",
      "definition": "Poder da Administração Pública de rever seus próprios atos, anulando os ilegais e revogando os inconvenientes."
    },
    {
      "term": "Reformatio in Pejus",
      "definition": "Agravamento da situação do recorrente em sede recursal. No processo administrativo, só é possível com notificação prévia."
    }
  ],

